{% extends "::base.html.twig" %}

{% block title %}Update Image{% endblock %}

{% block body %}

    <div class="container">
        <br><br><br>
        <form method="post">
            <div class="form-group row">
                <label for="Title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" required value="{{ image.title }}" id="Title" placeholder="Title" name="title">
                </div>
            </div>
            <div class="form-group row">
                <label for="path" class="col-sm-2 col-form-label">Path</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" required value="{{ image.path }}" id="path" placeholder="Path" name="path">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="path" class="col-sm-2 col-form-label">Allowed Days</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" required value="{{ image.allowedDays }}" id="allowedDays" placeholder="Allowed Days" name="allowedDays">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="path" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="description" required rows="3" name="description">{{ image.description }}</textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
