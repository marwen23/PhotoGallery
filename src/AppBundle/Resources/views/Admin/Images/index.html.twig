{% extends "::base.html.twig" %}

{% block title %}Images Dashboard{% endblock %}

{% block body %}
    <!-- Button trigger modal -->



    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Welcome To Image Dashboard</h1>
            <p></p>
            <p>
                <a class="btn btn-primary" href="{{ path('create_image') }}">Create new Image</a>
            </p>
        </div>
    </section>

<div class="container">
    <div class="row">
        {% for image in pagination %}
        <div class="col-sm-4">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" style="max-height:250px;"  src="{{ image.path }}" alt="Card image cap">
                <div class="card-block">
                    <h4 class="card-title">{{ image.title }}</h4>
                    <p class="card-text">{{ image.description }}</p>
                    <a href="{{ path('update_image', {'id':image.id})  }}" class="btn butt btn-secondary">Edit</a>
                    <a type="button" class="btn btn-danger" href="{{ path('delete_image', {'id':image.id})  }}">
                        Delete
                    </a>

                    <p class="card-text"><small class="text-muted">Created: {{ image.dateOfCreation | date }} By</small> <span class="badge badge-warning">{{ image.user.username }}</span></p>
                </div>
            </div>
        </div>

            <!-- Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Do you really want to delete this image?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            <a href="{{ path('delete_image', {'id':image.id})  }}" type="button" class="btn btn-danger">Yes</a>
                        </div>
                    </div>
                </div>
            </div>





        {% endfor %}
        </div>
    <div class="container">
        <div class="row justify-content-md-center">

            <div class="col-md-auto">
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>

        </div>
    </div>


    </div>
</div>
{% endblock %}
