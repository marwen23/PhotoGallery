{% extends "::base.html.twig" %}

{% block title %}Create Image{% endblock %}

{% block body %}

    <div class="container">
        <form method="post">
            <div class="form-group row">
                <label for="Title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Title" required placeholder="Title" name="title">
                </div>
            </div>
            <div class="form-group row">
                <label for="path" class="col-sm-2 col-form-label">Path</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="path" required placeholder="Path" name="path">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="path" class="col-sm-2 col-form-label">Allowed Days</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" min="1" required id="allowedDays" placeholder="Allowed Days" name="allowedDays">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="path" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="description" required rows="3" name="description"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
